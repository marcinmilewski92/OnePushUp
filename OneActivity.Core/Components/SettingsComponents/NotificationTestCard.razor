@using OneActivity.Core.Services
@inject ISharedContent Shared

<div class="card mt-3">
    <div class="card-header">
        <h3>@Shared.NotificationTestingTitle</h3>
    </div>
    <div class="card-body">
        <p>@Shared.NotificationTestingDescription</p>
        <button class="btn btn-primary" @onclick="OnSendTest" disabled="@IsTesting">
            @if (IsTesting)
            {
                <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                <span>@Shared.NotificationTestingButtonTesting</span>
            }
            else
            {
                <span>@Shared.NotificationTestingButtonIdle</span>
            }
        </button>
        
        @if (!string.IsNullOrEmpty(NotificationTestMessage))
        {
            <div class="alert @(NotificationTestError ? "alert-danger" : "alert-success") mt-3">
                @NotificationTestMessage
            </div>
        }
        
        <div class="small text-muted mt-3">
            <p>@Shared.LastNotificationScheduledLabel @Preferences.Get("last_notification_scheduled", "Never")</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsTesting { get; set; }
    [Parameter] public string NotificationTestMessage { get; set; } = string.Empty;
    [Parameter] public bool NotificationTestError { get; set; }
    [Parameter] public EventCallback OnSendTest { get; set; }
}

