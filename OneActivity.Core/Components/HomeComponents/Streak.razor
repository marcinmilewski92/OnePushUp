<div class="streak-card card mt-4">
    <div class="card-body">
        @if (_isLoading)
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <div class="streak-content">
                <div class="streak-header">
                    <h2 class="stat-number">@(_streakData?.CurrentStreak ?? 0)</h2>
                    <p class="streak-label">Day Streak</p>
                </div>

                <div class="stats-row">
                    <div class="stat-item">
                        <p class="stat-number">@(_streakData?.QuantityInCurrentStreak ?? 0)</p>
                        <p class="stat-label">Units in Current Streak</p>
                    </div>
                    <div class="stat-item">
                        <p class="stat-number">@(_streakData?.TotalQuantity ?? 0)</p>
                        <p class="stat-label">Total Units Overall</p>
                    </div>
                </div>

                @if (_streakData?.CurrentStreak > 0)
                {
                    <div class="streak-message mt-3">
                        <i class="bi bi-fire me-2"></i>
                        @if (_streakData.CurrentStreak >= 30)
                        {
                            <span>Incredible! @_streakData.CurrentStreak days is legendary!</span>
                        }
                        else if (_streakData.CurrentStreak >= 14)
                        {
                            <span>Amazing! @_streakData.CurrentStreak days is impressive!</span>
                        }
                        else if (_streakData.CurrentStreak >= 7)
                        {
                            <span>Great job! You've reached @_streakData.CurrentStreak days!</span>
                        }
                        else
                        {
                            <span>Keep going! Your streak is building!</span>
                        }
                    </div>
                }
                else
                {
                    <div class="streak-message mt-3">
                        <i class="bi bi-lightning-charge me-2"></i> Start your streak today!
                    </div>
                }
            </div>
        }
    </div>
</div>

