<div class="streak-card card mt-4">
    <div class="card-body">
        @if (_isLoading)
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">@Content.LoadingText</span>
                </div>
            </div>
        }
        else
        {
            <div class="streak-content">
                <div class="streak-header">
                    <h2 class="stat-number">@(_streakData?.CurrentStreak ?? 0)</h2>
                    <p class="streak-label">@Content.StreakDayStreakLabel</p>
                </div>

                <div class="stats-row">
                    <div class="stat-item">
                        <p class="stat-number">@(_streakData?.QuantityInCurrentStreak ?? 0)</p>
                        <p class="stat-label">@Content.StreakUnitsInCurrentStreakLabel</p>
                    </div>
                    <div class="stat-item">
                        <p class="stat-number">@(_streakData?.TotalQuantity ?? 0)</p>
                        <p class="stat-label">@Content.StreakTotalUnitsOverallLabel</p>
                    </div>
                </div>

                @if (_streakData?.CurrentStreak > 0)
                {
                    <div class="streak-message mt-3">
                        <i class="bi bi-fire me-2"></i>
                        @if (_streakData.CurrentStreak >= 30)
                        {
                            <span>@Content.StreakMsgLegendary(_streakData.CurrentStreak)</span>
                        }
                        else if (_streakData.CurrentStreak >= 14)
                        {
                            <span>@Content.StreakMsgImpressive(_streakData.CurrentStreak)</span>
                        }
                        else if (_streakData.CurrentStreak >= 7)
                        {
                            <span>@Content.StreakMsgReached(_streakData.CurrentStreak)</span>
                        }
                        else
                        {
                            <span>@Content.StreakMsgBuilding</span>
                        }
                    </div>
                }
                else
                {
                    <div class="streak-message mt-3">
                        <i class="bi bi-lightning-charge me-2"></i> @Content.StreakStartToday
                    </div>
                }
            </div>
        }
    </div>
</div>
