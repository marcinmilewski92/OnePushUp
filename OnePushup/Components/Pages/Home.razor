@page "/"
@using OnePushUp.Components.HomeComponents

@if (CurrentUser == null)
{
    <CreateUser OnUserCreated="HandleUserCreated" />
}
else
{
    <h1>Hello, @CurrentUser.NickName!</h1>
    
    <Streak @ref="_streakComponent" CurrentUser="CurrentUser" OnDataLoaded="HandleStreakDataLoaded" />
    
    <DailyPushup CurrentUser="CurrentUser" OnEntryAdded="HandleEntryAdded" />
}
